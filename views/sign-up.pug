extends sign-layout 

block content 
    form(class="space-y-6" action="#" method="POST")
        p(class="text-left text-rg text-black-500 mb-5") Welcome to the sign-up page for Saltford Tennis Club's In-House Tournament. The tournament will start on [START DATE].
        div(class="grid grid-cols-2 gap-2")
            div
                label(for="firstName" class="block text-sm font-medium leading-6 text-grey-900") First name 
                input#firstName(name="firstName" required class="block w-full rounded-md border-0 py-1.5 px-2 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6") 
            div
                label(for="lastName" class="block text-sm font-medium leading-6 text-grey-900") Last name 
                input#lastName(name="lastName" required class="block w-full rounded-md border-0 py-1.5 px-2 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6") 
        div
            label(for="gender" class="block text-sm font-medium leading-6 text-grey-900") Gender
            div(class="relative")
                select#gender(name="gender" required class="block appearance-none w-full bg-white border border-gray-400 hover:border-gray-500 px-4 py-2 pr-8 rounded leading-tight focus:ring-2 focus:ring-inset focus:ring-indigo-600")
                    option(value="") - - Gender - -
                    option(value="male") Male
                    option(value="female") Female
                div(class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2 text-gray-700")
                    img(class="fill-black h-4 w-4" src="/assets/images/select-arrow.svg")
        div#tournaments-wrapper(class="hidden")
            p Tournaments 
            hr(class="my-2")
            div(class="flex justify-between")
                div(class="flex items-center mb-4")
                    input#mens-singles(type="checkbox" value="mens-singles" class="w-4 h-4 focus:ring-2 focus:ring-inset focus:ring-indigo-600")
                    label(for="mens-singles" name="mens-singles" class="block text-base font-medium leading-6 text-grey-900 ms-2") Men's Singles
                div(class="flex items-center mb-4")
                    input#womens-singles(type="checkbox" value="womens-singles" class="w-4 h-4 focus:ring-2 focus:ring-inset focus:ring-indigo-600")
                    label(for="womens-singles" name="womens-singles" class="block text-base font-medium leading-6 text-grey-900 ms-2") Women's Singles
            div(class="flex justify-between")
                div(class="flex items-center mb-4")
                    input#mens-doubles(type="checkbox" value="mens-doubles" class="w-4 h-4 focus:ring-2 focus:ring-inset focus:ring-indigo-600")
                    label(for="mens-doubles" name="mens-doubles" class="block text-base font-medium leading-6 text-grey-900 ms-2") Men's Doubles
                div(class="flex items-center mb-4")
                    input#womens-doubles(type="checkbox" value="womens-doubles" class="w-4 h-4 focus:ring-2 focus:ring-inset focus:ring-indigo-600")
                    label(for="womens-doubles" name="womens-doubles" class="block text-base font-medium leading-6 text-grey-900 ms-2") Women's Doubles
            div(class="flex justify-center")
                div(class="flex items-center mb-4")
                    input#mixed-doubles(type="checkbox" value="mixed-doubles" class="w-4 h-4 focus:ring-2 focus:ring-inset focus:ring-indigo-600")
                    label(for="mixed-doubles" name="mixed-doubles" class="block text-base font-medium leading-6 text-grey-900 ms-2") Mixed Doubles
            p Seeded 
            hr(class="my-2")
            p(class="px-2.5 py-1.5 rounded-md bg-indigo-300") #[b Note]: Seeded players are those who have played for the 1st team during league matches #[u or] would be picked to do so. If you are unsure whether you are a seeded player, please contact your team captain.
            div(class="flex justify-start mt-2.5")
                div(class="flex items-center mb-4")
                    input#seeded(type="checkbox" value="seeded" class="w-4 h-4 focus:ring-2 focus:ring-inset focus:ring-indigo-600")
                    label(for="seeded" name="seeded" class="block text-base font-medium leading-6 text-grey-900 ms-2") Seeded Player
        div
            label(for="email" class="block text-sm font-medium leading-6 text-gray-900") Email address
            input#email(name="email" type="email" autocomplete="email" required class="block w-full rounded-md border-0 py-1.5 px-2 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6")
        div(class="grid grid-cols-2 gap-2")
            div
                label(for="password" class="block text-sm font-medium leading-6 text-gray-900") Password
                input#password(name="password" type="password" autocomplete="current-password" required class="block w-full rounded-md border-0 py-1.5 px-2 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6")
            div
                label(for="conf-password" class="block text-sm font-medium leading-6 text-gray-900") Confirm Password
                input#conf-password(name="conf-password" type="password" autocomplete="current-password" required class="block w-full rounded-md border-0 py-1.5 px-2 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6")
        p(class="mt-10 text-center text-sm text-black-500") By signing up, you agree that you are available to play for finals weekend. This will be held on #[b DD/MM/YYYY].
        div
            button(type="submit" class="flex w-full justify-center rounded-md bg-indigo-600 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600") Sign up
    p(class="mt-10 text-center text-sm text-gray-500") Already a member? 
        a(href="/users/sign-in" class="font-semibold leading-6 text-indigo-600 hover:text-indigo-500") Sign in
    
    script(type="text/javascript").
        const genderSelect = document.getElementById("gender");
        const tournamentsWrapper = document.getElementById("tournaments-wrapper")
        const menSinglesCheckbox = document.getElementById("mens-singles");
        const womenSinglesCheckbox = document.getElementById("womens-singles");
        const menDoublesCheckbox = document.getElementById("mens-doubles");
        const womenDoublesCheckbox = document.getElementById("womens-doubles");
        const mixedDoublesCheckbox = document.getElementById("mixed-doubles");

        genderSelect.addEventListener("change", function() {
            if (this.value === "male") {
                tournamentsWrapper.className = "";
                menSinglesCheckbox.disabled = false;
                womenSinglesCheckbox.disabled = true;
                menDoublesCheckbox.disabled = false;
                womenDoublesCheckbox.disabled = true;
                womenSinglesCheckbox.checked = false;
                womenDoublesCheckbox.checked = false;
            } else if (this.value === "female") {
                tournamentsWrapper.className = "";
                menSinglesCheckbox.disabled = true;
                womenSinglesCheckbox.disabled = false;
                menDoublesCheckbox.disabled = true;
                womenDoublesCheckbox.disabled = false;
                menSinglesCheckbox.checked = false;
                menDoublesCheckbox.checked = false;
            } else {
                tournamentsWrapper.className = "hidden";
                menSinglesCheckbox.checked = false;
                womenSinglesCheckbox.checked = false;
                menDoublesCheckbox.checked = false;
                womenDoublesCheckbox.checked = false;
                mixedDoublesCheckbox.checked = false;
            }
        });

        // Initialize checkbox states
        menSinglesCheckbox.disabled = true;
        womenSinglesCheckbox.disabled = true;