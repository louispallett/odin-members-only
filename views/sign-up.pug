extends sign-layout 

block content 
    if errors
        div(class="bg-red-50 text-red-800 py-3 px-3 mb-2.5 shadow-md ring-2 ring-red-600 rounded-lg")
            ul
            for error in errors
                li(class="text-sm")=error.msg
    form(class="space-y-6" method="POST")
        div
            label(for="username" class="block text-sm font-medium leading-6 text-gray-900") Username
            input#username(name="username" type="username" autocomplete="username" required class="block w-full rounded-md border-0 py-1.5 px-2 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset focus:ring-blue-600 sm:text-sm sm:leading-6")
        div(class="grid grid-cols-2 gap-2")
            div
                label(for="password" class="block text-sm font-medium leading-6 text-gray-900") Password
                input#password(name="password" type="password" autocomplete="current-password" required oninput="passCheck()" class="block w-full rounded-md border-0 py-1.5 px-2 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset focus:ring-blue-600 sm:text-sm sm:leading-6")
            div
                label(for="conf-password" class="block text-sm font-medium leading-6 text-gray-900") Confirm Password
                input#conf-password(name="conf-password" type="password" autocomplete="current-password" required oninput="passCheck()" class="block w-full rounded-md border-0 py-1.5 px-2 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset focus:ring-blue-600 sm:text-sm sm:leading-6")
        div 
            span#errorMsg(class="hidden m-0 p-0 text-red-800 text-xs font-bold") Passwords must match!
        div
            button(type="submit" class="flex w-full justify-center rounded-md bg-blue-600 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-blue-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600") Sign up
    p(class="mt-10 text-center text-sm text-gray-500") Already a member? 
        a(href="/users/sign-in" class="font-semibold leading-6 text-blue-600 hover:text-blue-500") Sign in