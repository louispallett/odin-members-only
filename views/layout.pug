doctype html
html(lang="en")
  head
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    title=title
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/stylesheets/more-styles.css')
    link(rel="icon" type="image/x-icon" href="/assets/images/key.svg")
    script(src="/javascripts/dom-content-dash.js")
  body(class="max-w-screen")
    header(class="relative z-20 flex justify-between py-3 pl-5 pr-3 sm:pl-6 sm:pr-4 md:pr-3.5 lg:px-6 flex items-center space-x-4 antialiased border-b border-blue-100")
      div
        h1#title(class="text-2xl sm:text-4xl font-black text-blue-700") MEMBERS ONLY
        a(href="https://github.com/louispallett/odin-members-only" class="flex justify-start items-center gap-2.5")
          img#github(class="h-4" src="/assets/images/github.svg")
          h2(class="text-xs sm:text-sm") by LowPal
      div(class="flex flex-col sm:flex-row items-center gap-1 sm:gap-5") 
        div(class="flex flex-col sm:flex-row justify-center items-center gap-2.5 w-content bg-blue-500 rounded-md px-1.5 py-1 sm:px-3 sm:py-1.5")
          img(class="hidden sm:block h-5" src="/assets/images/profile.svg")
          p(class="text-white sm:font-bold text-sm sm:text-base")=user.username
        if user.admin 
          p
        else if user.member
          button#adminBtn(class="flex justify-center text-sm sm:text-base rounded-md bg-blue-600 px-1.5 py-1 sm:px-3 sm:py-1.5 sm:font-bold leading-6 text-white shadow-sm hover:bg-blue-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600") Admin Login
        else
          button#memberBtn(class="flex justify-center text-sm sm:text-base rounded-md bg-blue-600 px-1.5 py-1 sm:px-3 sm:py-1.5 sm:font-bold leading-6 text-white shadow-sm hover:bg-blue-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600") Become a member 
        a(href="/users/logout")
          button(class="flex justify-center text-sm sm:text-base rounded-md bg-blue-600 px-1.5 py-1 sm:px-3 sm:py-1.5 sm:font-bold leading-6 text-white shadow-sm hover:bg-blue-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600") Log Out
    div(class="flex flex-col justify-start md:grid md:grid-cols-dashboard md:justify-around gap-10 px-3 py-6 sm:px-6 sm:py-10 min-h-screen items-start overflow-hidden")
      block content
    footer(class="bg-blue-100 rounded-lg shadow m-4")
        div(class="w-full mx-auto max-w-screen-xl p-4")
          a(href="https://github.com/louispallett/odin-members-only" class="flex gap-2.5")
            img#github(class="h-4" src="/assets/images/github.svg")
            h2(class="text-sm") Â© 2024 LowPal, The Odin Project
  script(type='text/javascript').
      const adminDialog = document.getElementById("adminDialog");
      const adminBtn = document.getElementById("adminBtn");
      adminBtn.addEventListener("click", () => adminDialog.showModal());
  script(type='text/javascript').
    const memberDialog = document.getElementById("memberDialog");
    const memberBtn = document.getElementById("memberBtn");
    memberBtn.addEventListener("click", () => memberDialog.showModal());
